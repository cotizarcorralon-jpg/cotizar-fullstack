// This is your Prisma schema file
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  image     String?
  createdAt DateTime @default(now())
  
  memberships CompanyMember[]
  quotes      Quote[]
  accounts    Account[]
  sessions    Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Company {
  id        String   @id @default(cuid())
  name      String
  address   String?
  whatsapp  String?
  email     String?
  website   String?
  logoUrl   String?
  pdfTerms  String?  @db.Text
  createdAt DateTime @default(now())
  
  members      CompanyMember[]
  materials    Material[]
  quotes       Quote[]
  usage        Usage[]
  subscription Subscription?
}

model CompanyMember {
  id        String   @id @default(cuid())
  companyId String
  userId    String
  role      String   // owner, admin, member
  createdAt DateTime @default(now())
  
  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([companyId, userId])
}

model Material {
  id        String   @id @default(cuid())
  companyId String
  name      String
  unit      String
  price     Float
  synonyms  String[] // Array of keywords
  createdAt DateTime @default(now())
  
  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)
  
  @@index([companyId])
}

model Quote {
  id          String   @id @default(cuid())
  companyId   String
  userId      String
  rawText     String   @db.Text
  parsedItems Json     // Array of items
  notes       Json?    // Parser notes/warnings
  total       Float
  createdAt   DateTime @default(now())
  
  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([companyId])
  @@index([userId])
}

model Usage {
  id         String   @id @default(cuid())
  companyId  String
  monthKey   String   // YYYY-MM
  quoteCount Int      @default(0)
  updatedAt  DateTime @updatedAt
  
  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)
  
  @@unique([companyId, monthKey])
}

model Subscription {
  id                    String   @id @default(cuid())
  companyId             String   @unique
  plan                  String   // FREE, PRO
  status                String   // active, inactive, canceled
  mpPreapprovalPlanId   String?
  mpPreapprovalId       String?
  updatedAt             DateTime @updatedAt
  createdAt             DateTime @default(now())
  
  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)
}
