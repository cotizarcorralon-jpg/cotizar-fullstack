generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  company       Company?
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Company {
  id        String   @id @default(cuid())
  name      String
  address   String?
  whatsapp  String?
  email     String?
  website   String?
  logoUrl   String?
  pdfBackgroundUrl String?
  pdfTerms  String?
  plan      String   @default("Guest")
  
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  materials Material[]
  quotes    Quote[]
}

model Material {
  id        String   @id @default(cuid())
  name      String
  unit      String
  price     Float
  keywords  String[]
  
  companyId String
  company   Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
}

model Quote {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  
  // Content & Analytics
  rawMessage String?  @db.Text // The exact WhatsApp message
  parsedResult Json?  // storing the array of items detected
  total     Float?
  
  // User Context 
  userEmail    String?   // Google Account Email
  companyEmail String?   // Configured "Contact" Email (PDF)
  
  // Relations
  companyId String?
  company   Company?  @relation(fields: [companyId], references: [id], onDelete: SetNull)
}

model UsageLog {
  id        String   @id @default(cuid())
  ip        String
  action    String   // e.g. "GENERATE_QUOTE"
  createdAt DateTime @default(now())
  
  // Optional linkage to user context
  companyId String?
  metadata  Json?    // Store extra info if needed

  @@index([ip, createdAt])
}
